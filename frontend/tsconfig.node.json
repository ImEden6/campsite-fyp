// tsconfig.node.json
// configures the typescript compiler for the node.js scripts in the scripts directory
{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["vite.config.ts"]
}
