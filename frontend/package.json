{
  "name": "@campsite-management/frontend",
  "version": "1.0.0",
  "description": "Modular frontend for campsite management system",
  "private": true,
  "type": "module",
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "build:check": "tsc && vite build",
    "build:analyze": "npm run build && node scripts/analyze-bundle.js",
    "build:verify": "npm run build && node scripts/verify-production-build.js",
    "analyze": "node scripts/analyze-bundle.js",
    "verify": "node scripts/verify-production-build.js",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:edge": "playwright test --project=edge",
    "test:e2e:mobile": "playwright test --project=mobile-*",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install",
    "clean": "rimraf node_modules/.vite dist",
    "clean:cache": "rimraf node_modules/.vite",
    "dev:clean": "npm run clean:cache && vite"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@sentry/react": "^10.23.0",
    "@stripe/react-stripe-js": "^5.3.0",
    "@stripe/stripe-js": "^8.4.0",
    "@tanstack/react-query": "^5.90.7",
    "@types/fabric": "^5.3.10",
    "axios": "^1.13.2",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "fabric": "^6.9.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.66.0",
    "react-router-dom": "^7.9.5",
    "recharts": "^3.4.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.6.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.13",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.0",
    "mock-socket": "^9.3.1",
    "msw": "^2.11.5",
    "postcss": "^8.4.32",
    "rimraf": "^6.1.0",
    "sharp": "^0.34.5",
    "source-map": "^0.7.4",
    "tailwindcss": "^4.1.16",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.3.6",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  }
}
